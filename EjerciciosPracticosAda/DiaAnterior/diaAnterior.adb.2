WITH Ada.Text_IO; USE Ada.Text_IO;

PROCEDURE diaAnterior IS
   FechaIntroducida: String(1..8);
   Dia, Mes, Annio: Integer;
   numDiasMesAnterior: Integer;
BEGIN
   Put("Introduzca fecha en formato DD/MM/AA: ");
   Get(FechaIntroducida);
   Dia := Integer'Value(FechaIntroducida(1..2));
   Mes := Integer'Value(FechaIntroducida(4..5));
   Annio := Integer'Value(FechaIntroducida(7..8));

   IF(Dia = 1) THEN  --Hay que hacer calculos especiales para calcular el dia del mes anterior
      IF(Mes = 1) THEN
         Mes := 12;
      ELSE
         NULL;
      END IF;
      CASE Mes IS
         WHEN 1 | 3 | 5 | 7 | 8 | 10 | 12 =>
            NumDiasMesAnterior := 31;
         WHEN 2 =>
            IF(((Annio mod 4 = 0) AND (Annio mod 100 /= 0)) OR (Annio mod 400 = 0) )THEN
               NumDiasMesAnterior := 29;
            ELSE
               NumDiasMesAnterior := 28;
            END IF;
         WHEN OTHERS =>
            NumDiasMesAnterior := 30;
      END CASE;
   ELSE

   END IF;

END DiaAnterior;



